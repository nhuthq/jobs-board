<%= form_with(model: job) do |form| %>
  <% if job.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="titlefield" class="form-label">*Title</label>
    <%= form.text_field :title, id: "titlefield", required: true, autofocus: true, class: "form-control"%>
  </div>
  <br/>

  <div class="form-group">
    <label for="applylinkfield" class="form-label">*Apply Link</label>
    <%= form.text_field :apply_url,id: "applylinkfield", class: "form-control"%>
  </div>
  <br/>

  <div class="row align-items-start">
    <div class="form-group col-6">
      <label for="locationfield" class="form-label">*Location</label>
      <%= form.select :job_type, %w[Full-time Part-time Contract Freelance], {}, {class: "form-select"} %>
    </div>

    <div class="form-group col-6">
      <label for="locationfield" class="form-label">*Location</label>
      <%= form.text_field :location, id:"locationfield", required: true, class: "form-control"%>
      <div id="locationHelp" class="form-text mb-2">Example: Ho Chi Minh, Da Nang...</div>
      <div class="form-check">
        <%= form.check_box :is_remote, class: "form-check-input", type: "checkbox"%>
        <label class="form-check-label" for="flexCheckDefault">
          Work can be done remotely
        </label>
      </div>
    </div>
  </div>
  <br/>

  <div class='form-group'>
    <%= form.text_area :description, rows: "5", class: "form-control", placeholder: "Description" %>
  </div>
  <br/>

  <div class="row form-group align-items-start">
    <div class="col-6">
      <label for="companynamefield" class="form-label">*Company Name</label>
      <%= form.text_field :job_author, id: "companynamefield", required: true, class: "form-control"%>
    </div>
    <div class="col-6">
      <label for="avatarfield" class="form-label">*Logo Image</label>
      <%= form.file_field :avatar, id: "avatarfield", required: true, class: "form-control"%>
    </div>

  </div>
  <br/>

  <div class="form-group">
    <label for="companyurlfield" class="form-label">Company Profile</label>
    <%= form.text_field :url, id: "companyurlfield", required: true, class:"glyphicon glyphicon-camera form-control", placeholder: "https://"%>
  </div>
  <br/><hr>

  <div class="action">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
